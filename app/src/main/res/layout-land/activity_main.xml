<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textViewHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:text="" />

    <TextView
        android:id="@+id/textViewMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="0"
        android:layout_weight="15"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:orientation="vertical"
        android:weightSum="5">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onFigureClick"
                android:tag="1"
                android:text="1" />
            <Button
                android:layout_weight="1"
                android:onClick="onFigureClick"
                android:tag="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2" />
            <Button
                android:layout_weight="1"
                android:onClick="onFigureClick"
                android:tag="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3" />
            <Button
                android:id="@+id/buttonMul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onOperationClick"
                android:tag="*"
                android:layout_weight="1"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:onClick="onFigureClick"
                android:tag="4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4" />

            <Button
                android:onClick="onFigureClick"
                android:tag="5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5" />

            <Button
                android:onClick="onFigureClick"
                android:tag="6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6" />

            <Button
                android:id="@+id/buttonSub"
                android:onClick="onOperationClick"
                android:tag="-"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_row="2"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:onClick="onFigureClick"
                android:tag="7"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7" />

            <Button
                android:onClick="onFigureClick"
                android:tag="8"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8" />

            <Button
                android:onClick="onFigureClick"
                android:tag="9"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onOperationClick"
                android:tag="/"
                android:text="/" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_row="3"
            android:orientation="horizontal">
            <Button
                android:onClick="onFigureClick"
                android:tag="0"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0" />

            <Button
                android:id="@+id/buttonPoint"
                android:onClick="onPointClick"
                android:tag="."
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="." />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onEqualClick"
                android:tag="="
                android:text="=" />

            <Button
                android:id="@+id/buttonSum"
                android:minWidth="100dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onOperationClick"
                android:tag="+"
                android:text="+" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_row="5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonClean"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onClearClick"
                android:tag="C"
                android:text="C" />

            <Button
                android:id="@+id/buttonRemove"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onRemoveClick"
                android:tag="←"
                android:text="←" />

            <Button
                android:id="@+id/buttonLeftBracket"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onBracetsClick"
                android:tag="("
                android:text="(" />

            <Button
                android:id="@+id/buttonRightBarchet"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onBracetsClick"
                android:tag=")"
                android:text=")" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>