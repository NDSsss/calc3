<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textViewHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_rowWeight="1"

        android:layout_weight="1"
        android:text="" />

    <TextView
        android:id="@+id/textViewMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="0" />
    <GridLayout
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="9"
        android:columnCount="4">


        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="1"
            android:layout_gravity="fill"
            android:minHeight="5dp"
            android:text="1" />

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="2"
            android:layout_gravity="fill"
            android:minHeight="5dp"
            android:text="2" />

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="3"
            android:layout_gravity="fill"
            android:minHeight="5dp"
            android:text="3" />

        <Button
            android:id="@+id/buttonMul"
            android:layout_rowWeight="1"
            android:onClick="onOperationClick"
            android:tag="*"
            android:layout_gravity="fill"
            android:minHeight="5dp"
            android:text="*" />

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="4"
            android:minHeight="5dp"
            android:text="4" />

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="5"
            android:minHeight="5dp"
            android:text="5" />

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="6"
            android:minHeight="5dp"
            android:text="6" />

        <Button
            android:id="@+id/buttonSub"
            android:layout_rowWeight="1"
            android:onClick="onOperationClick"
            android:tag="-"
            android:layout_gravity="fill"
            android:minHeight="5dp"
            android:text="-" />

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="7"
            android:minHeight="5dp"
            android:text="7" />

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="8"
            android:minHeight="5dp"
            android:text="8" />

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="9"
            android:minHeight="5dp"
            android:text="9" />

        <Button
            android:id="@+id/buttonDiv"
            android:layout_rowWeight="1"
            android:onClick="onOperationClick"
            android:tag="/"
            android:minHeight="5dp"
            android:text="/"
            android:layout_gravity="fill"/>

        <Button
            android:layout_rowWeight="1"
            android:onClick="onFigureClick"
            android:tag="0"
            android:minHeight="5dp"
            android:text="0" />

        <Button
            android:id="@+id/buttonPoint"
            android:layout_rowWeight="1"
            android:onClick="onPointClick"
            android:tag="."
            android:minHeight="5dp"
            android:text="." />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="onEqualClick"
            android:tag="="
            android:minHeight="5dp"
            android:text="=" />

        <Button
            android:id="@+id/buttonSum"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="onOperationClick"
            android:tag="+"
            android:minHeight="5dp"
            android:text="+" />

        <Button
            android:id="@+id/buttonClean"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="onClearClick"
            android:tag="C"
            android:minHeight="5dp"
            android:text="C" />

        <Button
            android:id="@+id/buttonRemove"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="onRemoveClick"
            android:tag="←"
            android:minHeight="5dp"
            android:text="←" />

        <Button
            android:id="@+id/buttonLeftBracket"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="onBracetsClick"
            android:tag="("
            android:minHeight="5dp"
            android:text="(" />

        <Button
            android:id="@+id/buttonRightBarchet"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="onBracetsClick"
            android:tag=")"
            android:minHeight="5dp"
            android:text=")" />
    </GridLayout>
</LinearLayout>